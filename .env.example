# Backend Environment Variables
# Copy this file to .env and update the values for your environment

# Node.js environment (development, production, test)
NODE_ENV=production

# Port for the backend server
PORT=3001

# Server host address
SERVER_HOST=0.0.0.0

# CORS origin for frontend (update with your frontend URL)
CORS_ORIGIN=http://localhost:3000

# MediaSoup announced IP (use your server's public IP in production)
MEDIASOUP_ANNOUNCED_IP=localhost

# MediaSoup port range for RTP traffic
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=40100

# External domain for WebRTC (use your domain in production)
EXTERNAL_DOMAIN=localhost